top_srcdir=@top_srcdir@
top_builddir=@top_builddir@

REBAR=$(shell which rebar3 || echo $(top_builddir)/rebar3)

all: compile

compile: rebar.config
	$(REBAR) compile

clean: rebar.config
	$(REBAR) clean

distclean: clean
	-rm -f aclocal.m4 config.guess config.sub configure missing Makefile
	-rm -rf autom4te.cache
	-rm -f rebar.lock
	-rm -rf _build

rebar.config: rebar.config.in $(top_builddir)/config.status
	$(SHELL) ./config.status

$(top_builddir)/config.status: $(top_srcdir)/configure
	$(SHELL) ./config.status --recheck

$(top_srcdir)/configure:
	$(SHELL) autoconf

.PHONY: all compile clean distclean
